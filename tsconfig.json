{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "paths": {
      "@mcp/core": ["./packages/core/src"],
      "@mcp/types": ["./packages/types/src"],
      "@mcp/ui": ["./packages/ui/src"],
      "@mcp/module-*": ["./modules/*/src"]
    }
  },
  "exclude": ["node_modules", "dist", "build"]
}
