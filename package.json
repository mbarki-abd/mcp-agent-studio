{
  "name": "mcp-agent-studio",
  "version": "0.1.0",
  "private": true,
  "description": "MCP Agent Studio - Multi-Agent Orchestration Platform",
  "license": "MIT",
  "author": "mbarki <mbark@ilinqsoft.com>",
  "workspaces": [
    "packages/*",
    "modules/*",
    "apps/*",
    "server"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "dev:server": "turbo run dev --filter=server",
    "dev:dashboard": "turbo run dev --filter=dashboard",
    "dev:mcp": "cd tools/sample-mcp-server && npm start",
    "mcp:test": "cd tools/sample-mcp-server && node test-client.js",
    "build": "turbo run build",
    "build:check": "pnpm test && pnpm build",
    "test": "turbo run test",
    "test:unit": "vitest run",
    "test:watch": "vitest watch",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "playwright test",
    "test:e2e:prod": "TEST_URL=https://mcp-studio.ilinqsoft.com playwright test",
    "typecheck": "turbo run typecheck",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint:fix",
    "format": "prettier --write .",
    "clean": "turbo run clean && rimraf node_modules",
    "db:generate": "turbo run db:generate --filter=server",
    "db:migrate": "turbo run db:migrate --filter=server",
    "db:push": "turbo run db:push --filter=server",
    "precommit": "pnpm lint && pnpm typecheck && pnpm test:unit"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "prettier": "^3.1.0",
    "rimraf": "^5.0.5",
    "turbo": "^2.3.0",
    "typescript": "^5.3.0",
    "vitest": "^2.1.0"
  },
  "packageManager": "pnpm@9.15.0",
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=9.0.0"
  }
}
